extends ../layout

block content
  div.mybox
    h2 New user?
      a(onclick="transfer()", name="signup") SignUp
    form(action="/users/signin", method="POST", class="myform")
      label E-mail/Username
      input(type="text", name="username")
      label Password
      input(type="password", name="password")
      input(type="submit", name="submit")
